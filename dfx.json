{
  "canisters": {
    "backend": {
      "main": "backend/app.mo",
      "type": "motoko",
      "args": "--enhanced-orthogonal-persistence"
    },
    "sms_verification_backend": {
      "candid": "sms_verification/src/sms_verification_backend/sms_verification_backend.did",
      "package": "sms_verification_backend",
      "type": "rust"
    },
    "frontend": {
      "dependencies": [
        "backend",
        "sms_verification_backend"
      ],
      "frontend": {
        "entrypoint": "frontend/dist/index.html"
      },
      "source": [
        "frontend/dist"
      ],
      "type": "assets"
    }
  },
  "output_env_file": ".env",
  "defaults": {
    "build": {
      "packtool": "mops sources"
    }
  },
  "workspace": {
    "sms_verification_backend": {
      "root": "sms_verification"
    }
  }
}