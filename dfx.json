{
  "canisters": {
    "ocr_canister": {
      "type": "custom",
      "candid": "ocr-kybra-canister/src/__init__.py",
      "build": "cd ocr-kybra-canister && export CANISTER_CANDID_PATH=src/__init__.py && python3 -m kybra ocr_canister src/__init__.py",
      "wasm": "ocr-kybra-canister/.kybra/ocr_canister/ocr_canister.wasm"
    },
    "backend": {
      "main": "backend/app.mo",
      "type": "motoko",
      "args": "--enhanced-orthogonal-persistence",
      "dependencies": [
        "ocr_canister"
      ]
    },
    "frontend": {
      "dependencies": [
        "backend"
      ],
      "frontend": {
        "entrypoint": "frontend/index.html"
      },
      "source": [
        "frontend/dist"
      ],
      "type": "assets"
    }
  },
  "output_env_file": ".env",
  "defaults": {
    "build": {
      "packtool": "mops sources"
    }
  }
}