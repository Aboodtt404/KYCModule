{
  "canisters": {
    "backend": {
      "main": "backend/app.mo",
      "type": "motoko",
      "args": "--enhanced-orthogonal-persistence"
    },
    "frontend": {
      "dependencies": [
        "backend"
      ],
      "frontend": {
        "entrypoint": "frontend/dist/index.html"
      },
      "source": [
        "frontend/dist"
      ],
      "type": "assets",
      "routes": [
        {
          "match": "/**",
          "serve": "/index.html"
        }
      ]
    }
  },
  "output_env_file": ".env",
  "defaults": {
    "build": {
      "packtool": "mops sources"
    }
  }
}
